<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:paddingTop="30dp"
            android:paddingLeft="22dp"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:paddingTop="30dp"
            android:paddingLeft="22dp"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Welcome" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="30px"
        android:paddingLeft="60px"
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/F_name" />

        <TextView
            android:paddingTop="30px"
            android:paddingLeft="60px"
            android:id="@+id/textView4"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/f1_name" />

        <TextView
            android:paddingTop="30px"
            android:paddingLeft="60px"
            android:id="@+id/textView5"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/L1_name" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="30px"
        android:paddingLeft="60px"
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:text="@string/Gen" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="0dp" />

        <RadioButton

            android:id="@+id/radioButton"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:text="Male" />

    </LinearLayout>

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"



        android:layout_marginLeft="105dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:text="Female" />

    <LinearLayout
        android:paddingTop="30dp"
        android:paddingLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:text="Student ID" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="22011234"
            android:paddingLeft="30px" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="School" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Republic Polytechnic"
            android:paddingTop="30dp"
            android:paddingLeft="22dp" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="30dp"
        android:paddingLeft="22dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:text="Email" />

        <TextView

            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="john@abc.com"
            android:paddingTop="30px"
            android:paddingLeft="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="60px"
        android:paddingTop="0px">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Phone" />

        <EditText
            android:id="@+id/editTextPhone"
            style="@style/Widget.Material3.AutoCompleteTextView.FilledBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="12345678"
            android:inputType="phone"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>